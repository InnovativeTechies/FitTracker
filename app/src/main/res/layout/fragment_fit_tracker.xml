<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/White"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="@dimen/fab_margin"
    android:id="@+id/fit_linearlayout"
    tools:context=".FitTrackerFragment">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    app:srcCompat="@drawable/step" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:textSize="18dp"
                    android:text="Steps"
                    android:textAppearance="@style/TextAppearance.AppCompat"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="24dp"
                android:paddingBottom="8dp"
                android:paddingStart="24dp"
                android:textSize="40dp"
                android:id="@+id/display_step"
                android:textAppearance="@style/TextAppearance.AppCompat"/>
        </LinearLayout>

    </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardCornerRadius="8dp"
            app:cardUseCompatPadding="true"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:padding="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        app:srcCompat="@drawable/calorie" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:paddingLeft="4dp"
                        android:paddingStart="4dp"
                        android:textSize="18dp"
                        android:text="Cals"
                        android:textAppearance="@style/TextAppearance.AppCompat"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:paddingLeft="24dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="24dp"
                    android:textSize="25dp"
                    android:id="@+id/tv_calorie"
                    android:textAppearance="@style/TextAppearance.AppCompat"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        app:cardUseCompatPadding="true"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    app:srcCompat="@drawable/distance" />
                <TextView
                    android:id="@+id/tv_unit_distance"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="4dp"
                    android:paddingStart="4dp"
                    android:textSize="18dp"
                    android:text="Km"
                    android:textAppearance="@style/TextAppearance.AppCompat"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical|center_horizontal"
                android:paddingLeft="24dp"
                android:paddingBottom="8dp"
                android:paddingStart="24dp"
                android:textSize="25dp"
                android:id="@+id/tv_distance"
                android:textAppearance="@style/TextAppearance.AppCompat"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

<android.support.v7.widget.CardView
app:cardCornerRadius="8dp"
app:cardUseCompatPadding="true"
    android:layout_weight="1"
android:layout_width="match_parent"
android:layout_height="wrap_content">
<LinearLayout
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp">

        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            app:srcCompat="@drawable/timer" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingStart="4dp"
            android:textSize="18dp"
            android:text="Min."
            android:textAppearance="@style/TextAppearance.AppCompat"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical|center_horizontal"
        android:paddingLeft="24dp"
        android:paddingBottom="8dp"
        android:paddingStart="24dp"
        android:textSize="25dp"
        android:id="@+id/tv_time"
        android:textAppearance="@style/TextAppearance.AppCompat"/>
</LinearLayout>
</android.support.v7.widget.CardView>
    </LinearLayout>
    <RadioGroup
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:id="@+id/radiogroup_fit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_setwalking"
            android:layout_weight="1"
            android:textSize="@dimen/text_size"
            android:text="Walking"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_weight="1"
            android:id="@+id/radio_setrunning"
            android:textSize="@dimen/text_size"
            android:text="Running"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/start_button"
        android:background="@color/DodgerBlue"
        android:textSize="18dp"
        android:textColor="@color/White"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="16dp"
        android:id="@+id/save_button"
        android:background="@color/DodgerBlue"
        android:textSize="18dp"
        android:text="@string/savebtn_text"
        android:textColor="@color/White"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"/>
</LinearLayout>
